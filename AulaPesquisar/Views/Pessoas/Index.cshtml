@model IEnumerable<AulaPesquisar.Pessoa>

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        Pesquisa Pessoas
    </div>
    <div class="card-body">
        <form action="/Pessoas/Index" method="get">
            <div class="row">
                <a href="/Pessoas/Create" class="btn btn-dark">
                     Novo
                </a>
                <select name="itembusca" class="form-control ml-2 mr-2 col-2 ">
                    <option value="Id"> Todos</option>
                    <option value="Nome"> Por Nome</option>
                    <option value="Idade"> Por Idade</option>
                    <option value="CPF">Por CPF</option>
                    <option value="RG">Por RG </option>
                </select>

                    <label class="col-2 m-2 mt-3"> Digite sua busca</label>
                    <input type="search" name="query" class="form-control col-4 m-2" />
                    <button type="submit" class="btn btn-success col-2 m-2">
                        Pesquisar <!-- comentario -->
                    </button>
</div>
        </form>
    </div>
</div>


<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            

            <th>
                Nome
            </th>
            <th>
                Idade
            </th>
            <th>
                C.P.F
            </th>
            <th>
                R.G
            </th>
            <th>
               Data de Nascimento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mae)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone_fixo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.celular)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_nasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mae)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone_fixo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.celular)
            </td>
            <td>
                <a href="/Pessoas/Edit/@item.Id" class="btn btn-warning">
                    Editar Pessoa
                </a>
                <a href="/Pessoas/Delete/@item.Id" class="btn btn-danger">
                    Excluir Pessoa
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
